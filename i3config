mode "mark_window" {                                                                        
     bindsym $mod+1 mark m1; mode "default"                                                           
     bindsym $mod+2 mark m2; mode "default"                                                           
     bindsym $mod+3 mark m3; mode "default"                                                           
     bindsym $mod+4 mark m4; mode "default"                                                           
     bindsym $mod+5 mark m5; mode "default"                                                           
     bindsym $mod+a mark ma; mode "default"                                                           
     bindsym $mod+b mark mb; mode "default"                                                           
     bindsym $mod+c mark mc; mode "default"                                                           
     bindsym $mod+d mark md; mode "default"                                                           
     bindsym $mod+e mark me; mode "default"                                                           
     bindsym $mod+Return mode "default"                                               
     bindsym $mod+Escape mode "default"                                               
}                                                                                           
                                                                                            
mode "go_to_window" {                                                                       
     bindsym $mod+1 [con_mark="m1"] focus; mode "default"                                             
     bindsym $mod+2 [con_mark="m2"] focus; mode "default"                                             
     bindsym $mod+3 [con_mark="m3"] focus; mode "default"                                             
     bindsym $mod+4 [con_mark="m4"] focus; mode "default"                                             
     bindsym $mod+5 [con_mark="m5"] focus; mode "default"                                             
     bindsym $mod+a [con_mark="ma"] focus; mode "default"                                             
     bindsym $mod+b [con_mark="mb"] focus; mode "default"                                             
     bindsym $mod+c [con_mark="mc"] focus; mode "default"                                             
     bindsym $mod+d [con_mark="md"] focus; mode "default"                                             
     bindsym $mod+e [con_mark="me"] focus; mode "default"                                             
     bindsym $mod+Return mode "default"                                               
     bindsym $mod+Escape mode "default"                                               
}                                                                                           
                                                                                            
bindsym $mod+o mode "go_to_window"                                                          
bindsym $mod+m mode "mark_window" 
